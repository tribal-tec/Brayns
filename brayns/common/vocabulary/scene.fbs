namespace brayns.v1;

table Material {
    diffuse_color : [float:3];
    specular_color: [float:3];
    specular_exponent: float;
    reflection_index : float;
    opacity: float;
    refraction_index: float;
    light_emission: float;
    glossiness: float;
}

table Volume {
    single_shade: bool = true;
    preintegration: bool = false;
    gradient_shading: bool = false;
    adaptive_scalar: float = 15;
    adaptive_max_sampling_rate: float = 2;
    adaptive_backtrack: float = 0.02;
    adaptive_sampling: bool = true;
    sampling_rate: float = 0.125;
}

table Scene {
    materials: [Material];
    volume: Volume;
}
